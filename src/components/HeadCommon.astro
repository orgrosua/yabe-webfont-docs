---
const googleFontsFamilies = [
	'family=IBM+Plex+Mono:ital@0;1',
	'family=Lexend+Deca:wght@100..900',
	'family=Outfit:wght@100..900',
	'family=Roboto:wght@100..900',
];
---

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
<link rel="dns-prefetch" href="http://cdn.jsdelivr.net" />

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Google Search Console verification -->
<meta name="google-site-verification" content="1eDue2rtHMqD8GntwGZRRfTr3A1fsjJJWSobL5qbLm4" />

<!-- MasterCSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@master/normal.css@2.0.0-beta.214" />
<script type="module">
	import ThemeService from 'https://cdn.jsdelivr.net/npm/theme-service@2.0.0-beta.214/+esm';
	import { initRuntime } from 'https://cdn.jsdelivr.net/npm/@master/css@2.0.0-beta.214/dist/index.bundle.mjs';

	const themeService = new ThemeService({
		store: 'theme',
	});

	window.themeService = themeService;

	const config = {};

	const masterCSS = initRuntime(config);

	window.masterCSS = masterCSS;
</script>

<!-- Load Fonts -->
<link
	href={`https://fonts.googleapis.com/css2?${googleFontsFamilies.join('&')}&display=swap`}
	rel="stylesheet"
/>

<!-- Font Awesome -->
<script
	data-search-pseudo-elements
	src="https://kit.fontawesome.com/ee89d90c81.js"
	crossorigin="anonymous"
></script>

<!-- Lightbox -->
<script src="https://cdn.jsdelivr.net/npm/fslightbox@3.4.1/index.min.js"></script>

<script>
	import '../scripts/main.js';
</script>

<!-- Analytics script -->
<script defer data-domain="webfont.yabe.land" data-api="https://plausible.suabahasa.dev/api/event" src="https://plausible.suabahasa.dev/js/script.file-downloads.outbound-links.js"></script>
